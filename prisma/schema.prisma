generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Board {
  id          String @id
  name        String
  description String
  owner       Int
  lastUpdate  String
  rows Row[]
}

model Row {
  board    Board? @relation(fields: [boardId], references: [id])
  boardId  String?
  id String @id
  name String
  default Boolean
  assignments Assignment[]
}


model Assignment {
  id       String @id
  row    Row? @relation(fields: [rowId], references: [id])
  canvasId Int
  rowId  String?
  tasks Tasks[]
  courseID Int
}

model Tasks {
  id           String @id
  assignment    Assignment @relation(fields: [assignmentID], references: [id])
  status       String
  name         String
  assignmentID String
  dueAt        String
}
