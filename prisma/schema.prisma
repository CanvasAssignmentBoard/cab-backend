// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model Board {
  id        String      @id 
  name      String
  description String 
  owner     String
}

model Course {
  canvasId Int @id
  boardId String
}

model Assignment {
  id String @id 
  canvasId Int
  status String
  boardId String
}

model Tasks {
    id String @id 
    status String
    name String
    assignmentID String
    dueAt String
}







datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
